{
  "name": "@crakmedia-repo/registry-cli",
  "author": "crakmedia",
  "version": "5.0.6",
  "license": "UNLICENSED",
  "description": "CLI exposing operations over registry DB",
  "main": "lib/index.js",
  "types": "lib/types/index.d.ts",
  "files": [
    "bin",
    "lib",
    "package.json"
  ],
  "engines": {
    "node": ">=16.13.0",
    "pnpm": ">=6.21.0"
  },
  "bin": {
    "registry-cli": "./bin/index.js"
  },
  "repository": {
    "url": "git+https://github.com/Crakmedia-Repo/crak-label.git",
    "type": "git",
    "directory": "frontend/cfa/registry-cli"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "pnpm build:rm && pnpm prisma:generate && pnpm build:tsc && pnpm build:prisma",
    "build:rm": "rimraf dist lib coverage",
    "build:tsc": "tsc",
    "build:prisma": "cp -r ./src/prisma/client ./lib/prisma/client/",
    "release": "pnpm publish --no-git-checks",
    "test": "jest --runInBand --config jest.config.js",
    "start": "tsc -w --preserveWatchOutput",
    "test:cov": "jest --runInBand --coverage",
    "env:make": "cp .env.example .env",
    "docker:db": "docker-compose -f docker-compose.db.yml up -d",
    "prisma:pull": "pnpm exec prisma db pull",
    "prisma:generate": "pnpm exec prisma generate"
  },
  "keywords": [
    "registry",
    "cfa",
    "db",
    "cli"
  ],
  "devDependencies": {
    "@types/figlet": "^1.5.5",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.8",
    "copyfiles": "^2.4.1",
    "jest": "^27.5.1",
    "jest-mock-extended": "^2.0.9",
    "prisma": "^4.7.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^27.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@prisma/client": "^4.7.1",
    "commander": "^8.3.0",
    "cosmiconfig": "^7.1.0",
    "fs-extra": "^10.1.0",
    "globby": "^11.1.0"
  }
}
